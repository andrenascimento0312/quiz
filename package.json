{
  "name": "quiz-realtime",
  "version": "1.0.0",
  "description": "Sistema de quiz em tempo real com React e Socket.IO",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "migrate": "node server/scripts/migrate.js",
    "seed": "node server/scripts/seed.js",
    "setup": "npm install && cd client && npm install && cd .. && npm run migrate && npm run seed",
    "postinstall": "npm run migrate",
    "deploy:railway": "npm run migrate && npm start",
    "deploy:render": "npm run migrate && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "joi": "^17.9.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["quiz", "realtime", "socket.io", "react"],
  "author": "",
  "license": "MIT"
}